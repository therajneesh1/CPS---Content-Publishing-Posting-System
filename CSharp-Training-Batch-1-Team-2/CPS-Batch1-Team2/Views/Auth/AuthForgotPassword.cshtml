@{
    ViewData["Title"] = "Forgot Password";
}

<link rel="stylesheet" href="@Url.Content("~/css/Auth.css")">

@* <button class="logo">Logo</button> *@
<img src="https://images.vexels.com/content/142789/preview/multicolor-swirls-circle-logo-41322f.png" alt="Logo" class="logo" width="80" height="80" />
<h2>Forgot Password</h2>

<!-- Step 1: Enter Email -->
<div id="emailStep">
    <input type="text" id="email" name="email" placeholder="Enter Email/Username" required>
    <button type="button" class="btn" onclick="checkEmail()">Submit</button>
</div>

<!-- Step 2: Enter OTP (Hidden Initially) -->
<div id="otpStep" style="display: none;">
    <input type="text" id="otp" name="otp" placeholder="Enter OTP">
    <button type="button" class="btn" onclick="verifyOtp()">Verify OTP</button>
</div>

<!-- Step 3: Reset Password (Hidden Initially) -->
<div id="resetStep" style="display: none;">
    <input type="password" id="newPassword" name="newPassword" placeholder="New Password" required>
    <input type="password" id="confirmPassword" name="confirmPassword" placeholder="Confirm New Password" required>
    <button type="button" class="btn" onclick="resetPassword()">Reset Password</button>
</div>

<p>Want to go back? <a asp-controller="Auth" asp-action="AuthLogin">Login here</a></p>
<div class="bottom-plate">
    Company terms and conditions.
</div>

<script src="@Url.Content("~/js/Auth.js")"></script>
